@using Polimedica.ViewModel;
@model LoginVM

Bem vindo aos acessórios da Plomédica do Vale

<body class="text-center vsc-initialized">

    <main class="form-signin">
        <form asp-action="Login" method="post">
            <img class="mb-4" src="~/Image/Logo.jpeg">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating">
                <input asp-for="Nome" class="form-control">
                <label asp-for="Nome">Nome</label>
            </div>
            <div class="form-floating">
                <input asp-for="Password" class="form-control">
                <label asp-for="Password">Password</label>
            </div>
            <!--
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
            -->
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Registrar</a>
            
        </form>
    </main>
</body>